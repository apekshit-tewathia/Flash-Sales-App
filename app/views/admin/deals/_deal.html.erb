<div class="deal">
  <div id='corousal-deal-<%= deal.id %>' class="carousel slide" data-ride="carousel" data-interval="3500">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= image_tag deal.images.first, class: "d-block" %>
      </div>
      <% deal.images.to_a[1..-1].each do |image| %>
        <div class="carousel-item">
          <%= image_tag image, class: "d-block" %>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href='#corousal-deal-<%= deal.id %>' role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href='#corousal-deal-<%= deal.id %>' role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <div class="deal_detail">
    <h3><%= deal.title %></h3>
    <p><i><%= deal.description %></i></p>
    <div class="price_detail">
      <p id="price">$<%= deal.price_in_cents %></p>
      <p id="d_price">$<%= deal.discount_price_in_cents %></p>
    </div>
    <div class="deal_info">
      <h4>Quantity: <%= deal.quantity %></h4>
      <h4>Tax: <%= deal.tax_percentage %>%</h4>
      <h4>Publish Date: <%=  deal.published_at.to_date%></h4>
    </div>
    <%= link_to 'View', admin_deal_url(deal) %>
  </div>
</div>
